<?php if ($this->displayBoth()):?>
<tr>
    <td style="<?php echo $this->getStyle() ?>" class="a-right" colspan="<?php echo $this->getColspan(); ?>">
        <label><?php echo $this->helper('tax')->__('Subtotal (Excl. Tax)') ?></label>
    </td>
    <td style="<?php echo $this->getStyle() ?>" class="a-right">
        <?php echo $this->helper('checkout')->formatPrice($this->getTotal()->getValueExclTax()) ?>
    </td>
</tr>
<tr>
    <td style="<?php echo $this->getStyle() ?>" class="a-right" colspan="<?php echo $this->getColspan(); ?>">
        <label><?php echo $this->helper('tax')->__('Subtotal (Incl. Tax)') ?></label>
    </td>
    <td style="<?php echo $this->getStyle() ?>" class="a-right">
        <?php echo $this->helper('checkout')->formatPrice($this->getTotal()->getValueInclTax()) ?>
    </td>
</tr>
<?php else : ?>
<tr>
    <td style="<?php echo $this->getStyle() ?>" class="a-left" colspan="<?php echo $this->getColspan()-1; ?>">
        <!--?php echo $this->getTotal()->getTitle() ?-->
        <label><?php echo $this->helper('tax')->__('Subtotal (w/gst)') ?></label>
    </td>
    <td style="<?php echo $this->getStyle() ?>" class="a-right">
        <input type="hidden" id="subtotal" value="<?php echo $this->getTotal()->getValue()?>" />
        <?php echo $this->helper('checkout')->formatPrice($this->getTotal()->getValue()) ?>
    </td>
</tr>
<?php endif;?>
