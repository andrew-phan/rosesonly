?>
<?php
    $_product = $this->getProduct();
    $_finalPrice = $_product->getFinalPrice();
    $_finalPriceInclTax = $_product->getFinalPrice();
    $_weeeTaxAmount = 0;

    if ($_product->getPriceType() == 1) {
        $_weeeTaxAmount = Mage::helper('weee')->getAmount($_product);
        if (Mage::helper('weee')->typeOfDisplay($_product, array(1, 2, 4))) {
            $_weeeTaxAttributes = Mage::helper('weee')->getProductWeeeAttributesForDisplay($_product);
        }
    }
    $isMAPTypeOnGesture = Mage::helper('catalog')->isShowPriceOnGesture($_product);
    $canApplyMAP = Mage::helper('catalog')->canApplyMsrp($_product);


    //valentine
    $cats = $_product->getCategoryIds();
    $is_valentine_product = false;
    foreach ($cats as $category_id){
        if($category_id == 50){
            $is_valentine_product = true;
            break;
        }
    }

    /*
    if($_COOKIE['delivery_cost']!='')
        $shippingcost = $_COOKIE['delivery_cost'];
    else if(Mage::getStoreConfig("onestepcheckout/config/default_shippingcost"))
        $shippingcost = Mage::getStoreConfig("onestepcheckout/config/default_shippingcost");
    */

    $begin_valentine_date = new DateTime('02/12/2014');
    $now = new DateTime();
    if($is_valentine_product && $now < $begin_valentine_date)
        $shippingcost = "0.0";
    else $shippingcost = Mage::getStoreConfig("onestepcheckout/config/default_shippingcost");

    //writeCookie('delivery_cost', $shippingcost);
    //writeCookie('shipping_cost', $shippingcost);
    
?>
<?php
if($this->getRequest()->getModuleName()=="checkout" && $this->getRequest()->getActionName()=="configure"){
	$id = Mage::app()->getRequest()->getParam('id');
	$cartQuote = Mage::getSingleton('checkout/cart')->getQuote()->getItemById($id);
	if($cartQuote->getRowTotalInclTax()){
		$_finalPriceInclTax = $cartQuote->getRowTotalInclTax()/$cartQuote->getQty();
	}
}
?>
<?php if ($_product->getCanShowPrice() !== false): ?>
    <div class="price-box">
        <p class="price-as-configured">
            <span class="price-label"><?php echo $this->helper('bundle')->__('Subtotal') ?>:</span>
            <?php if (!$this->getWithoutPrice()): ?>
                <span<?php if (!$isMAPTypeOnGesture && $canApplyMAP): ?> style="display:none"<?php endif ?> class="full-product-price">
                    <?php if ($this->helper('tax')->displayBothPrices()): ?>
                        <span class="price-tax">
                            <span class="price-excluding-tax">
                                <!--<span class="label"><?php echo Mage::helper('tax')->__('Excl. Tax:') ?></span>-->
                                <span class="price" id="price-excluding-tax-<?php echo $_product->getId() ?><?php echo $this->getIdSuffix() ?>">
                                    <?php if (!$canApplyMAP): ?>
                                        <?php echo Mage::helper('core')->currency($_finalPrice, true, false) ?>
                                    <?php endif ?>
                                </span>
                            </span>
                            <?php if ($_weeeTaxAmount && $_product->getPriceType() == 1 && Mage::helper('weee')->typeOfDisplay($_product, array(2, 1, 4))): ?>
                                <span class="weee">(<small>
                                        <?php $_weeeSeparator = '';
                                        foreach ($_weeeTaxAttributes as $_weeeTaxAttribute): ?>
                                            <?php if (Mage::helper('weee')->typeOfDisplay($_product, array(2, 4))): ?>
                                                <?php $amount = $_weeeTaxAttribute->getAmount() + $_weeeTaxAttribute->getTaxAmount(); ?>
                                            <?php else: ?>
                                                <?php $amount = $_weeeTaxAttribute->getAmount(); ?>
                                            <?php endif; ?>

                                            <?php echo $_weeeSeparator; ?>
                                            <?php echo $_weeeTaxAttribute->getName(); ?>: <?php echo Mage::helper('core')->currency($amount, true, true); ?>
                                            <?php $_weeeSeparator = ' + '; ?>
                                        <?php endforeach; ?>
                                    </small>)</span>
                            <?php endif; ?>
                            <span class="price-including-tax">
                                <!--<span class="label"><?php echo Mage::helper('tax')->__('Incl. Tax:') ?></span>-->
                                <span>(w/gst&nbsp;</span>
                                <span class="price include" id="price-including-tax-<?php echo $_product->getId() ?><?php echo $this->getIdSuffix() ?>">
                                    <?php if (!$canApplyMAP): ?>
                                        <?php echo Mage::helper('core')->currency($_finalPriceInclTax, true, false) ?>
                                    <?php endif ?>
                                </span>
                                <span>)</span>
                            </span>
                        </span>
                    <?php else: ?>
                        <span class="price m_full-product-price" id="product-price-<?php echo $_product->getId() ?><?php echo $this->getIdSuffix() ?>">
                            <?php if (!$canApplyMAP): ?>
                                <?php
                                    echo Mage::helper('core')->currency($_finalPrice, true, false)
                                ?>
                            <?php endif ?>
                        </span>

                        <?php if ($_weeeTaxAmount && $_product->getPriceType() == 1 && Mage::helper('weee')->typeOfDisplay($_product, array(2, 1, 4))): ?>
                            <span class="weee">(<small>
                                    <?php $_weeeSeparator = '';
                                    foreach ($_weeeTaxAttributes as $_weeeTaxAttribute): ?>
                                        <?php if (Mage::helper('weee')->typeOfDisplay($_product, array(2, 4))): ?>
                                            <?php $amount = $_weeeTaxAttribute->getAmount() + $_weeeTaxAttribute->getTaxAmount(); ?>
                                        <?php else: ?>
                                            <?php $amount = $_weeeTaxAttribute->getAmount(); ?>
                                        <?php endif; ?>

                                        <?php echo $_weeeSeparator; ?>
                                        <?php echo $_weeeTaxAttribute->getName(); ?>: <?php echo Mage::helper('core')->currency($amount, true, true); ?>
                                        <?php $_weeeSeparator = ' + '; ?>
                            <?php endforeach; ?>
                                </small>)</span>
                        <?php endif; ?>
                <?php endif; ?>
                </span>
    <?php endif ?>
        </p>
        <p class="price-as-configured">
            <span class="price-label"><?php echo $this->helper('bundle')->__('Delivery') ?></span>
            <span class="shipping_cost"><?php echo Mage::helper('core')->currency($shippingcost, true, false); ?></span>
        </p>
        <p class="price-as-configured total-price">
            <span class="price-label"><?php echo $this->helper('bundle')->__('Total') ?></span>
            <span class="price-total">
                <?php if (!$canApplyMAP): ?>
                    <?php echo Mage::helper('core')->currency($_finalPriceInclTax + $shippingcost, true, false) ?>
                <?php endif ?>
            </span>
            <span class="price-including-tax">
                <span>(GST: </span>
                <span class="price tax-price" id="tax-<?php echo $_product->getId() ?><?php echo $this->getIdSuffix() ?>">
                    <?php if (!$canApplyMAP): ?>
                        <?php echo Mage::helper('core')->currency($_product->getData('tax_amount') , true, false) ?>
                    <?php endif ?>
                </span>
                <span>)</span>
            </span>
        </p>
    </div>
<?php endif; ?>
<?php if ($_product->isSaleable()): ?>
    <script type="text/javascript">
        document.observe("dom:loaded", function() {
            bundle.reloadPrice();
        });
    </script>
<?php endif; ?>



