<?xml version="1.0"?>
<config>
	  <sections>
		<trackposetting  translate="label" module="trackpo">                    
		<label>Track POs</label>
		<tab>ERP</tab>
		<frontend_type>text</frontend_type>
		<sort_order>200</sort_order>
		<show_in_default>1</show_in_default>
		<show_in_website>1</show_in_website>
		<show_in_store>1</show_in_store>            
					<groups>
				      <trackpo translate="label"> 
					  <label>Track POs</label>
					  <frontend_type>text</frontend_type>
					  <sort_order>200</sort_order>
					  <show_in_default>1</show_in_default>
					  <show_in_website>1</show_in_website>
					  <show_in_store>1</show_in_store>
				       <fields>
                          <enable translate="label">
                            <label>Enable Track Open Purchase Orders</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>0</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
							<comment>Enable/Disable Track Open Purchase Orders</comment>
                          </enable>
                          <email translate="label">
                            <label>Send Track Information To</label>
							<frontend_type>text</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
							<comment>User's email who want to track open POs</comment>
                          </email>
                          <template translate="label">
                            <label>Email Template</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_email_template</source_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
							<comment>Email Template</comment>
                          </template>
					   </fields>
					   </trackpo>
					</groups>
		</trackposetting>
	  </sections>
</config>
