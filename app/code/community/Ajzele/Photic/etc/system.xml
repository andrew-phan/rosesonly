<?xml version="1.0"?>

<config>
    <tabs>
        <catalog translate="label" module="catalog">
            <label>Catalog</label>
            <sort_order>200</sort_order>
        </catalog>
    </tabs>
    <sections>
        <catalog translate="label" module="catalog">
            <groups>
                <photic translate="label">
                    <label>Photic</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>100</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <thumbs_on_product_grid translate="label comment">
                            <label>Thumbs on catalog product grid</label>
                            <comment>whether to show thumbs in the catalog product grid page</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>6</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </thumbs_on_product_grid>   
                        <thumbs_on_product_list translate="label comment">
                            <label>Thumbs on catalog product list</label>
                            <comment>whether to show thumbs in the catalog product list page</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>6</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </thumbs_on_product_list> 
                        <thumbs_on_product_view_page translate="label comment">
                            <label>Thumbs on product view page</label>
                            <comment>whether to show thumbs in the product view page</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>6</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </thumbs_on_product_view_page>                                                                      
					</fields>
            </photic>
            </groups>
        </catalog>
    </sections>
</config>
