<config>
    <modules>
        <Inchoo_GoogleAdWords>
            <version>1.0.0</version>
        </Inchoo_GoogleAdWords>
    </modules>
    <global>
        <blocks>
            <inchoo_google_adwords>
                <class>Inchoo_GoogleAdWords_Block</class>
            </inchoo_google_adwords>
        </blocks>
        <helpers>
            <inchoo_google_adwords>
                <class>Inchoo_GoogleAdWords_Helper</class>
            </inchoo_google_adwords>
        </helpers>
    </global>
    <frontend>
        <layout>
            <updates>
                <inchoo_google_adwords>
                    <file>inchoo_google_adwords.xml</file>
                </inchoo_google_adwords>
            </updates>
        </layout>
    </frontend>
    <default>
        <google>
            <inchoo_google_adwords>
                <enabled>0</enabled>
                <google_conversion_id>0</google_conversion_id>
                <google_conversion_language>hr</google_conversion_language>
                <google_conversion_format>1</google_conversion_format>
                <google_conversion_color>ffffff</google_conversion_color>
                <google_conversion_label>0</google_conversion_label>
            </inchoo_google_adwords>
        </google>
    </default>
</config>